
// Header
header#header
  h1
    a(href='/') Home
  nav.links
    ul
      each blogCategory in blogCategories
        - var category = blogCategory;
        li
          a(href='/#{category}') #{category}
  nav.main
    ul
      li.search
        a.fa-search(href='#search') Search
        form#search(method='get', action='#')
          input(type='text', name='query', placeholder='Search')
      li.menu
        a.fa-bars(href='#menu') Menu
// Menu
section#menu
  // Search
  section
    form.search(method='get', action='#')
      input(type='text', name='query', placeholder='Search')
  // Links
  section
    ul.links
      - var categoryIndex = 0;
      each blogCategory in blogCategories
        - var category = blogCategory;
        - var description = blogDescriptions[category];
        - categoryIndex += 1;
        li
          a(href='/#{category}')
            h3 #{category}
            p #{description}
